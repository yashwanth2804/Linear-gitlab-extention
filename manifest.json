{
    "manifest_version": 3,
    "name": "Linear Lab Linker",
    "version": "1.0",
    "description": "An extension to link gitlab branch urls to Linear",
    "permissions": ["activeTab","tabs","storage"],
      
    "background": {
    "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"       
  },
  "icons": {
     "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
    "content_scripts": [
      { 
        "matches": ["*://*.linear.app/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  