{
    "manifest_version": 3,
    "name": "Linear Gitlab Repository Extension",
    "version": "1.0",
    "description": "An extension to add gitlab URLs to Linear",
    "permissions": ["activeTab","tabs","storage"],
      
    "background": {
    "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"       
  },
    "content_scripts": [
      { 
        "matches": ["*://*.linear.app/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  